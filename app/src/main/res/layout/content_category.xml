<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="aklfishing.aucklandfishing.CategoryActivity"
    tools:showIn="@layout/activity_category"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AKL FISHING MENU"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:typeface="normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Safety Checklist"
        android:id="@+id/buttonSafety"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="30dp"
        android:background="#a0ffffff"
        android:textSize="20dp"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="FISHING RULES"
        android:id="@+id/buttonRules"
        android:layout_below="@+id/buttonSafety"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:background="#a0ffffff"
        android:layout_alignEnd="@+id/buttonSafety"
        android:layout_alignStart="@+id/buttonSafety" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="FISHING FAQS"
        android:id="@+id/buttonFaqs"
        android:layout_below="@+id/buttonRules"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:background="#a0ffffff"
        android:layout_alignEnd="@+id/buttonRules"
        android:layout_alignStart="@+id/buttonRules" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="TYPES OF FISH"
        android:id="@+id/buttonFish"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:background="#a0ffffff"
        android:layout_below="@+id/buttonFaqs"
        android:layout_alignEnd="@+id/buttonFaqs"
        android:layout_alignStart="@+id/buttonFaqs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="MAP"
        android:id="@+id/buttonMap"
        android:layout_marginTop="30dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="20dp"
        android:background="#a0ffffff"
        android:layout_below="@+id/buttonFish"
        android:layout_alignStart="@+id/buttonFish"
        android:layout_alignEnd="@+id/buttonFish" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="MY FISHING EXPERIENCE"
        android:id="@+id/buttonXP"
        android:textSize="20dp"
        android:background="#a0ffffff"
        android:layout_below="@+id/buttonMap"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/buttonMap"
        android:layout_alignEnd="@+id/buttonMap" />
</RelativeLayout>
